# Kraken Bot - Environment Variables Example
# Copy this to .env and fill in your actual values
# NEVER commit .env to git!

# Kraken API Credentials
KRAKEN_API_KEY="your_api_key_here"
KRAKEN_API_SECRET="your_api_secret_here"

# Trading Mode
# true = Paper trading (default, recommended for testing)
# false = Live trading (use only after validation)
KRAKEN_PAPER_MODE="true"

# Position Size
POSITION_SIZE_USD="100"

# Leverage (1-10x, default 2x)
DEFAULT_LEVERAGE="2"

# Learning Cycle
# How many trades between learning analysis (default 25)
LEARNING_CYCLE="25"

# Strategy File
STRATEGY_FILE="strategies.json"
TRADE_LOG_FILE="trade_log.json"

# Daily Loss Limit (stop trading if exceeded)
# Paper mode: absolute $ amount
# Live mode: percentage of account
DAILY_LOSS_LIMIT="1000"
DAILY_LOSS_LIMIT_PERCENT="5"

# Max Concurrent Trades
MAX_CONCURRENT_TRADES="1"

# Risk Management
MAX_POSITION_PCT="0.05"  # 5% of bankroll per trade
MAX_DRAWDOWN_PCT="0.20"  # 20% max drawdown
